<h1 style="algin: center;">게시판 리스트</h1><br/>

<% @posts.each do |t| %>
    제목 : <%= t.title %><br/>
    내용 : <%= t.content %><br/>
    <a href=<%= post_path(t.id)%>>자세히</a>
    <!--<a href=<%= post_path(t) %> data-method="delete">삭제</a>-->
    <div><%#= link_to '삭제하기aaa', post_path(t.id), method: :delete %></div>
    <%= button_to '삭제aaa', t, method: :delete %>
    <hr/>
    
<% end %>

<div style="text-align: right">
    <a href=<%= new_post_path %> class="btn btn-primary">글쓰기</a>
    
</div>